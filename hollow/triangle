//HOLLOW  TRIANGLE
#include<stdio.h>
int main()
{
	int N;
	printf("ENTER THE NUMBER:- ");
	scanf("%d",&N);
	int s=1;
	for(int i=1;i<=N;i++)
	{
		if(i==1 || i==N)
		{
			for(int j=1;j<=N-i;j++)
			{
				printf(" ");
			}
			printf("* ");
			printf("\n");
		}
		else
		{
			for(int j=1;j<=N-i;j++)
			{
				printf(" ");
			}
			printf("*");
			for(int j=1;j<=s;j++)
			{
				printf(" ");
			}
			printf("*");
			printf("\n");
			s=s+2;
		}
	}
	return 0;
}
